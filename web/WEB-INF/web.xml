<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>MainForm</servlet-name>
        <servlet-class>CSUSoftWare21.web.projectJPetStore.web.servlet.MainFormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainForm</servlet-name>
        <url-pattern>/mainForm</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CategoryForm</servlet-name>
        <servlet-class>CSUSoftWare21.web.projectJPetStore.web.servlet.CategoryFormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoryForm</servlet-name>
        <url-pattern>/categoryForm</url-pattern>
    </servlet-mapping>

    <!--log4j的servlet -->
    <servlet>
        <servlet-name>Log4JTestServlet</servlet-name>
        <servlet-class>CSUSoftWare21.web.projectJPetStore.web.servlet.Log4JTestServlet</servlet-class>
        <init-param>
            <!--这个参数Log4JTestServlet里要用-->
            <param-name>log4j-properties</param-name>
            <param-value>WEB-INF\classes\log4j.properties</param-value>
            <!--写out里project_war_exploded后的绝对路径-->
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>Log4JTestServlet</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>






</web-app>